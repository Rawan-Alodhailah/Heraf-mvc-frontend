<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - الحِرف اليدوية</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Arabic:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalProject.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #dcdbce;" dir="rtl">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light fixed-top border-bottom box-shadow mb-3" style="background-color: #dcdbce;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="\Images\heraf logo.png" class="logo" alt="logo" height="50px" width="70px"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#bio">عن حرف</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="">المدونة</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cart"><i class="bi bi-cart-fill" style="color: #493628;"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="padding-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-5 py-3" style="background-color: #dcdbce; color: 493628; border-top-style: solid; border-width: 1px; border-color: #493628;">
            <div class="container" style="color: #493628;">
                <div class="row">
                    <div class="col">
                        <a asp-controller="Home" asp-action="Index"><img src="\Images\heraf logo.png" class="logo" alt="logo" height="100px" width="130px"></a>
                    </div>
                    <div class="col">
                        <h3>عن حِرف</h3>
                        <ul class="list-unstyled">
                            <li><a href="#bio">من نحن</a></li>
                            <li><a href="#">أراء العملاء</a></li>
                        </ul>
                    </div>
                    <div class="col">
                        <h3>مواقع التواصل</h3>
                        <ul class="list-inline" style="color: #493628;">
                        <li class="list-inline-item"><i class="bi bi-whatsapp"></i></li>
                        <li class="list-inline-item"><i class="bi bi-twitter-x"></i></li>
                        <li class="list-inline-item"><i class="bi bi-instagram"></i></li>
                        <li class="list-inline-item"><i class="bi bi-tiktok"></i></li>
                        </ul>
                    </div>
                    <div class="col">
                        <h3>اتصل بنا</h3>
                        <p><i class="bi bi-telephone-fill"></i> 03767563428</p>
                    </div>
                </div>
                <div class="row text-center">
                    <h6>&copy; 2025 جميع الحقوق محفوظة</h6>
                </div>
            </div>
        </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
